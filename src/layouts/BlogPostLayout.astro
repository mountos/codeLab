---
import Layout from './Layout.astro';
import ToC from '../components/ToC.astro';
const { frontmatter, headings } = Astro.props;

const hasHeadings = headings.filter(h => h.depth > 1 && h.depth < 4).length > 0;
const primaryCategory = frontmatter.categories?.[0];
---
<Layout title={`${frontmatter.title}`} description={frontmatter.description}>

  {frontmatter.heroImage &&
    <div slot="hero" class="hero-background-container">
      <div class="hero-image" style={`background-image: url(${frontmatter.heroImage})`}></div>
      <div class="hero-overlay"></div>
    </div>
  }

  <div class="hero-foreground-content">
    {primaryCategory && <p class="hero-category">{primaryCategory}</p>}
    <h1 class="hero-title">{frontmatter.title}</h1>
  </div>

  <div class="blog-container">
    <article class="post">
      <div class="post-meta-bar">
        <div class="meta-item">
          <span class="label">Posted on</span>
          <span class="value">{new Date(frontmatter.pubDate).toLocaleDateString('en-US')}</span>
        </div>
      </div>

      <div class="content">
        <slot />
      </div>

      {frontmatter.tags?.length > 0 &&
        <footer class="post-footer">
          <div class="tags-list">
            <span>Tags</span>
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tags/${tag}`}>{tag}</a>
            ))}
          </div>
        </footer>
      }
    </article>
    
    {hasHeadings &&
      <aside class="toc-container">
        <ToC headings={headings} />
      </aside>
    }
  </div>
</Layout>

<style>
  :global(.main-content) {
    padding: 0 !important;
    max-width: none !important;
    width: 100% !important;
    background-color: var(--color-background); /* Ensure content has a background */
    position: relative; /* Needed for z-index to work */
    z-index: 10; /* Ensure content is above the background hero */
  }

  /* --- Hero as Background --- */
  .hero-background-container {
    position: fixed; /* Fix it to the viewport */
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh; /* Full viewport height */
    z-index: -1; /* Send it to the very back */
  }
  .hero-image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
  }
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
  }

  /* --- Foreground Content (Title that scrolls) --- */
  .hero-foreground-content {
    color: white;
    text-align: center;
    padding: 10rem 1.5rem 5rem; /* Large padding to create space */
    position: relative;
    z-index: 5; /* Above the background hero, below main content */
  }
  .hero-category {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0 0 0.5rem 0;
    opacity: 0.9;
  }
  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    text-shadow: 0 2px 20px rgba(0,0,0,0.6);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
  }

  /* --- Main Content Layout --- */
  .blog-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    background-color: var(--color-background); /* White background for the scrolling part */
  }

  @media (min-width: 1024px) {
    .blog-container {
      grid-template-columns: minmax(0, 3fr) 1fr;
    }
  }

  .post {
    max-width: 720px;
    width: 100%;
    justify-self: start;
  }

  .post-meta-bar {
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    padding: 1rem 0;
    margin-bottom: 3rem;
    display: flex;
    gap: 2rem;
    font-size: 0.9rem;
  }
  .meta-item .label {
    color: #888;
  }
  .meta-item .value {
    color: #333;
    font-weight: 500;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #f0f0f0;
  }
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }
  /* ... other styles remain the same ... */
  
  .toc-container {
    display: none;
  }
  @media (min-width: 1024px) {
    .toc-container {
      display: block;
    }
  }
</style>
