---
import Layout from './Layout.astro';
import ToC from '../components/ToC.astro';
const { frontmatter, headings } = Astro.props;

const hasHeadings = headings.filter(h => h.depth > 1 && h.depth < 4).length > 0;
const primaryCategory = frontmatter.categories?.[0];
---
<Layout title={`${frontmatter.title} | Mountos codeLab`}>
  <div class="blog-container">
    <article class="post">
      <header class="post-header">
        {primaryCategory && <a href={`/categories/${primaryCategory.toLowerCase()}`} class="post-category">{primaryCategory}</a>}
        <h1 class="post-title">{frontmatter.title}</h1>
      </header>
      <div class="post-meta-bar">
        <div class="meta-item">
          <span class="label">Posted on</span>
          <span class="value">{new Date(frontmatter.pubDate).toLocaleDateString('en-US')}</span>
        </div>
      </div>

      <div class="content">
        <slot />
      </div>

      {frontmatter.tags?.length > 0 &&
        <footer class="post-footer">
          <div class="tags-list">
            <span>Tags</span>
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tags/${tag}`}>{tag}</a>
            ))}
          </div>
        </footer>
      }
    </article>
    
    {hasHeadings &&
      <aside class="toc-container">
        <ToC headings={headings} />
      </aside>
    }
  </div>
</Layout>

<style>
  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  .post-category {
    display: block;
    text-align: center;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--color-text);
    text-decoration: none;
  }
  .post-category:hover {
    color: var(--color-link-hover);
  }
  .post-title {
    text-align: center;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }
  @media (max-width: 768px) {
    .post-title {
      font-size: 2.5rem;
    }
  }

  /* --- Main Content Layout --- */
  .blog-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    background-color: var(--color-background); /* White background for the scrolling part */
  }

  @media (min-width: 1024px) {
    .blog-container {
      grid-template-columns: minmax(0, 3fr) 1fr;
    }
  }

  .post {
    max-width: 720px;
    width: 100%;
    justify-self: start;
  }

  .post-meta-bar {
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
    margin-bottom: 3rem;
    display: flex;
    gap: 2rem;
    font-size: 0.9rem;
  }
  .meta-item .label {
    color: var(--color-gray);
  }
  .meta-item .value {
    color: var(--color-text);
    font-weight: 500;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: white;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }
  /* ... other styles remain the same ... */
  
  .toc-container {
    display: none;
  }
  @media (min-width: 1024px) {
    .toc-container {
      display: block;
    }
  }
</style>
