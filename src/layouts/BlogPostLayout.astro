---
import { getCollection } from 'astro:content';
import Layout from './Layout.astro';
import ToC from '../components/ToC.astro';

const { frontmatter, headings, slug } = Astro.props;

const hasHeadings = headings.filter(h => h.depth > 1 && h.depth < 4).length > 0;
const primaryCategory = frontmatter.categories?.[0];

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== slug) // Filter out the current post
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---
<Layout title={`${frontmatter.title} | Mountos codeLab`}>
  <div class="blog-container">
    <article class="post">
      {primaryCategory && <a href={`/categories/${primaryCategory.toLowerCase()}`} class="post-category">{primaryCategory}</a>}
      <h1 class="post-title">{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.pubDate.toISOString()}>
          {new Date(frontmatter.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </div>

      {frontmatter.heroImage && (
        <img
          src={frontmatter.heroImage}
          alt={`Cover image for ${frontmatter.title}`}
          class="post-cover-image"
        />
      )}

      <div class="content">
        <slot />
      </div>

      {frontmatter.tags?.length > 0 && (
        <footer class="post-footer">
          <div class="tags-list">
            <span class="tags-label">Tagged in:</span>
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tags/${tag.toLowerCase()}`} class="tag-badge">{tag}</a>
            ))}
          </div>
        </footer>
      )}
    </article>
    
    {hasHeadings &&
      <aside class="toc-container">
        <ToC headings={headings} />
      </aside>
    }
  </div>

  <!-- Related Posts Section -->
  {relatedPosts.length > 0 &&
    <div class="related-posts-container">
      <div class="related-posts-inner">
        <h2 class="related-posts-title">Read More</h2>
        <div class="related-posts-grid">
          {relatedPosts.map(post => (
            <a href={`/blog/${post.slug}/`} class="related-card">
              {post.data.heroImage ? (
                <img src={post.data.heroImage} alt={post.data.title} class="related-card-image" />
              ) : (
                <div class="related-card-image-placeholder"></div>
              )}
              <div class="related-card-content">
                <h3 class="related-card-title">{post.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  }
</Layout>

<style>
  .blog-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding-top: 1rem; /* Adjusted padding */
  }

  @media (min-width: 1024px) {
    .blog-container {
      grid-template-columns: minmax(0, 3fr) 1fr;
    }
  }

  .post {
    max-width: 720px;
    width: 100%;
    justify-self: start;
  }

  .post-category {
    display: block;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    color: var(--color-muted);
    text-decoration: none;
  }
  .post-category:hover {
    color: var(--color-link-hover);
  }

  .post-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--color-text);
  }

  .post-meta {
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-bottom: 2rem;
  }

  .post-cover-image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    margin-bottom: 3rem;
    border: 1px solid var(--color-border);
    background-color: #222;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: white;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }
  .tags-label {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-right: 0.5rem;
  }
  .tag-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-size: 0.85rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  .tag-badge:hover {
    background-color: #003300;
    border-color: var(--color-link-hover);
    color: var(--color-link-hover);
  }
  
  .toc-container {
    display: none;
  }
  @media (min-width: 1024px) {
    .toc-container {
      display: block;
    }
  }

  /* --- Related Posts Section --- */
  .related-posts-container {
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
    padding: 4rem 0;
  }
  .related-posts-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .related-posts-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-align: center;
  }
  .related-posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  @media (min-width: 640px) {
    .related-posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 960px) {
    .related-posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .related-card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: var(--color-text);
    background-color: #111;
    transition: all 0.2s ease;
    overflow: hidden;
  }
  .related-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-link-hover);
    box-shadow: 0 10px 20px rgba(0,0,0,0.4);
  }

  .related-card-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-bottom: 1px solid var(--color-border);
  }
  .related-card-image-placeholder {
    width: 100%;
    height: 150px;
    border-bottom: 1px solid var(--color-border);
    background-color: #222;
  }

  .related-card-content {
    padding: 1rem;
    flex-grow: 1;
  }
  .related-card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
  }
</style>
