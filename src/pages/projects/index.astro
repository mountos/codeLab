---
import Layout from '../../layouts/Layout.astro';

const projects = [
  {
    title: 'GhostURL Generator',
    description: 'A tool to convert URLs into unclickable versions with zero-width spaces.',
    url: '/projects/ghosturl'
  }
];
---
<Layout 
  title="Projects | Mountos codeLab"
  description="A collection of small tools and projects from Mountos codeLab."
>
  <div class="static-page">
    <h1>[ Projects ]</h1>
    <div class="project-list">
      {projects.map(project => (
        <a href={project.url} class="project-card">
          <h2>{project.title}</h2>
          <p>{project.description}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>
<style>
  .static-page {
    max-width: 960px;
    margin: auto;
  }
  .static-page h1 {
    font-size: 2.8rem;
    margin-bottom: 2rem;
    text-align: center;
    text-shadow: 0 0 8px var(--color-text);
  }
  .project-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  .project-card {
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }
  .project-card:hover {
    border-color: var(--color-link-hover);
    background-color: rgba(var(--color-link-rgb), 0.1);
    transform: translateY(-3px);
  }
  .project-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-link);
  }
    .project-card:hover h2 {
    color: var(--color-link-hover);
  }
  .project-card p {
    font-size: 1rem;
    line-height: 1.6;
  }
</style>
